---
import Section from "@/components/Section.astro";
import Layout from "../layouts/Layout.astro";
import FAQ from "@/components/sections/FAQ.astro";
---

<Layout
  title="Sobre nosotros - Econotrapos"
  description="Informacion de la empresa Econotrapos, conocenos y contactenos."
>
  <Section>
    <div
      class="flex flex-col items-center gap-5 py-10 text-center text-pretty px-10 lg:px-40"
    >
      <h1 class="text-3xl font-semibold text-primary animate-fade-up">
        Sobre Nosotros
      </h1>
      <p class="text-text2/85 font-normal animate-fade-up animate-delay-100">
        Econotrapos es una empresa líder en la producción de trapos
        reutilizables y biodegradables, diseñados para reducir el impacto
        ambiental y promover una vida más saludable.
      </p>
    </div>
  </Section>

  <Section>
    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-4 overflow-hidden [&>div>img]:rounded-xl [&>div>img]:overflow-hidden animate-fade-up animate-delay-200"
    >
      <div class="col-span-1 grid grid-rows-2 gap-4 overflow-hidden">
        <img
          src="/foto1.webp"
          alt="Ecopaños azules de franela"
          class="hidden md:block object-cover w-full h-full"
        />
        <img
          src="/foto2.webp"
          alt="Ecopaños grises de franela"
          class="hidden md:block object-cover w-full h-full"
        />
      </div>

      <img
        src="/foto5.webp"
        alt="Ecopaños blanco"
        class="object-cover rounded-xl w-full h-full"
      />

      <div class="col-span-1 grid grid-rows-2 gap-4">
        <img
          src="/foto4.webp"
          alt="Ecopaños blanco"
          class="hidden md:block object-cover w-full h-full"
        />
        <img
          src="/foto6.webp"
          alt="Ecopaños blanco"
          class="hidden md:block object-cover w-full h-full"
        />
      </div>
    </div>
  </Section>

  <FAQ />
</Layout>
