---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/sections/Hero.astro";
import Catalogo from "../components/sections/Catalogo.astro";
import SobreEconotrapos from "../components/sections/SobreEconotrapos.astro";
import ComoCreamos from "../components/sections/ComoCreamos.astro";
import FAQ from "../components/sections/FAQ.astro";

import { Image } from "astro:assets";
import IconFigure from "@/components/IconFigure.astro";

import TicketImage from "@/assets/tocketa.png";
import MaterialImage from "@/assets/material.png";
import PoleraImage from "@/assets/poleraeco.png";
---

<Layout
	title="Econotrapos"
	description="Encuentra la los trapos con mejor calidad / precio de Chile!"
>
	<Hero />
	<section class="relative w-screen h-4 mb-96 lg:mb-32 my-14 lg:py-32">
		<svg
			class="svg hidden md:block absolute bottom-10 right-0 left-0 -z-10 animate-fade animate-delay-400"
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 0 1440 240"
			><path
				fill="#014B41"
				fill-opacity="0.4"
				d="M0,96L40,85.3C80,75,160,53,240,80C320,107,400,181,480,192C560,203,640,149,720,122.7C800,96,880,96,960,90.7C1040,85,1120,75,1200,58.7C1280,43,1360,21,1400,10.7L1440,0L1440,320L1400,320C1360,320,1280,320,1200,320C1120,320,1040,320,960,320C880,320,800,320,720,320C640,320,560,320,480,320C400,320,320,320,240,320C160,320,80,320,40,320L0,320Z"
			></path></svg
		>
		<div
			class="container mx-auto flex flex-wrap items-center justify-center lg:justify-between gap-14 animate-fade-up animate-delay-500"
		>
			<IconFigure description="Material reciclado">
				<Image
					src={MaterialImage}
					alt="Icono de material reciclado"
					width={100}
					height={100}
					class="z-20"
				/>
			</IconFigure>
			<IconFigure description="Ropa Sostenible">
				<Image
					src={PoleraImage}
					alt="Polera con simbolo eco reciclada"
					width={100}
					height={100}
					class="z-20"
				/>
			</IconFigure>
			<IconFigure description="La moda lenta se vuelve Eco">
				<Image
					src={TicketImage}
					alt="Etiqueta de reciclado"
					width={100}
					height={100}
					class="z-20"
				/>
			</IconFigure>
		</div>
	</section>
	<Catalogo />
	<SobreEconotrapos />
	<ComoCreamos is_index={true}>
		<p class="text-text2/80">
			En Econotrapos, reciclamos textiles para crear productos de alta calidad,
			sostenibles y duraderos, promoviendo un ciclo continuo de reutilizaci√≥n.
		</p>
	</ComoCreamos>
	<FAQ />
</Layout>

<style>
	.svg {
		filter: drop-shadow(-2px -2px 10px #014b41);
		background: linear-gradient(
			rgba(255, 255, 255),
			66%,
			rgba(255, 255, 255),
			33%
		);
	}
</style>
